{
  "buildCommand": "bun run build",
  "outputDirectory": "client/dist",
  "installCommand": "bun install && cd client && bun install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}