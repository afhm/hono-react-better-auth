{
  "buildCommand": "bun run build",
  "outputDirectory": "client/dist",
  "installCommand": "bun install && cd client && bun install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "functions": {
    "api/index.ts": {
      "runtime": "edge",
      "maxDuration": 30,
      "includeFiles": "server/**"
    }
  }
}