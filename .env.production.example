# Database Configuration
# Option 1: Vercel Postgres (recommended for Vercel deployments)
# DATABASE_URL=postgres://[user]:[password]@[host]:[port]/[database]?sslmode=require

# Option 2: Neon Database
# DATABASE_URL=postgres://[user]:[password]@[host].neon.tech/[database]?sslmode=require

# Option 3: Supabase
# DATABASE_URL=postgres://[user]:[password]@db.[project-ref].supabase.co:5432/postgres

# Authentication Configuration
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars

# Your production Vercel URL (will be auto-set by Vercel)
BETTER_AUTH_URL=https://your-app.vercel.app

# Frontend URL (usually same as BETTER_AUTH_URL for Vercel)
CLIENT_URL=https://your-app.vercel.app

# Optional: Node environment
NODE_ENV=production